{
    "system": {
        "darkMode": true,
        "showFileExtensions": true,
        "showHiddenFiles": true,
        "disableCortana": true
    },
    "visual": {
        "theme": "Glow",
        "accentColor": "#A94DC1",
        "cursorScheme": "Windows Black",
        "transparency": true
    },
    "shell": {
        "showTaskViewButton": false,
        "showWidgetsButton": false,
        "centerTaskbarIcons": true,
        "taskbarItems": {
            "search": "icon",
            "taskView": false,
            "widgets": false
        },
        "systemTrayIcons": {
            "penMenu": false,
            "touchKeyboard": "whenNoKeyboard",
            "virtualTouchpad": false
        },
        "taskbarBehavior": {
            "alignment": "center",
            "autoHide": false,
            "showBadges": false,
            "showFlashing": false,
            "showOnAllDisplays": true,
            "multiDisplayApps": "allTaskbars",
            "allowWindowSharing": true,
            "showDesktopCorner": true,
            "combineButtons": "always",
            "combineButtonsOtherTaskbars": "always"
        }
    },
    "developer": {
        "developerMode": true,
        "devicePortal": false,
        "deviceDiscovery": false,
        "enableEndTask": true,
        "remoteDesktop": false,
        "defaultTerminal": "Windows Terminal"
    }
} 